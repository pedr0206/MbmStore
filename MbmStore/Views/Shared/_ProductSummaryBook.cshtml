@model MbmStore.Models.Book

@using MbmStore.Infraestructure
    <div class="row">
        <div class="col-md-2">
            <img src="/Images/@Model.ImageUrl" alt="@Model.Title" style="width:100px" />
        </div>
        <div class="col-md-4">
            <strong>Title:</strong> @Model.Title<br />
            <strong>Author:</strong> @Model.Author<br />
            <strong>Price:</strong> @Model.Price<br />
            <strong>Publisher:</strong> @Model.Publisher (@Model.Published)<br />
            <strong>ISBN:</strong> @Model.ISBN<br /> <br />
        </div>
        <div class="col-md-6">
            <form id="@Model.ProductId" asp-action="AddToCart"
                  asp-controller="Cart" method="post">
                <input type="hidden" name="ProductID" value="@Model.ProductId" />
                <input type="hidden" name="returnUrl"
                       value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <span class="card-text p-1">
                    <button type="submit"
                            class="btn btn-success btn-sm pull-right" style="float:right">
                        Add To Cart
                    </button>
                </span>
            </form>
        </div>


        @*@await Html.PartialAsync("_AddToCartButton", (Product)Model)*@
    </div>

